<% include partials/_header %>

<div class="container">

  <div class="row">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="name">
            </div>

            <div class="form-group">
              <select class="form-control type" name="type">
                <option disabled selected value> select an type  </option>
                <option value="Movie">Movie</option>
                <option value="Food">Food</option>
              </select>
            </div>

            <div class="form-group">
              <select class="form-control favorite" name="favorite" >
                  <option disabled selected value> select an favorite  </option>
                
              </select>
            </div>

          
            <button class="btn btn-primary" type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Favorite</th>
            <th>Operations</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < tasks.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= tasks[i].name %></strong></td>
              <td><%= tasks[i].type %></td>
              <td><%= tasks[i].favorite %></td>
              <td>
                <a
                  class="<%= tasks[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                  href="/turn/<%= tasks[i]._id %>">Done</a>
                <a href="/delete/<%= tasks[i]._id %>"
                  class="btn btn-danger">
                  Delete
                </a>
                <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">
                  Edit
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>

$(".type").on("change", function(){
  var Type = $(this).val();
  var options=' <option disabled selected value> select an favorite  </option>';
  if(Type=="Movie"){
      options +=  '<option value="Action">Action</option> <option value="Drama">Drama</option>';
                
  }else if(Type=="Food"){
      // console.log(Type)
      options += '<option value="Chinese">Chinese</option> <option value="Indian">Indian</option>';
  }
  $('.favorite').html(options);

});


</script>

